@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "Exercise 02-C");
    var cid = Request.QueryString["cid"];
    

    if (string.IsNullOrEmpty(cid))
    {
        Response.Redirect("Exercise02A.cshtml");
    }

    var db = Database.Open("CHINOOK");
    var prodquery = @"SELECT AlbumId, Title, ReleaseYear, ReleaseLabel 
FROM Albums
WHERE ArtistId = @0
ORDER BY Title";

    var prodinfo = db.Query(prodquery, cid);

    var catquery = @"SELECT Name 
FROM Artists
WHERE ArtistId = @0";
    var catname = db.QueryValue(catquery, cid);

    var gridinstance = new WebGrid(prodinfo, rowsPerPage: 5);
}



@section banner {<h1>WebGrid Display</h1>}
<div class="offset-1">
    <h3>Albums for Artist: @catname</h3>
    <div class="col-11">
        @gridinstance.GetHtml(
            tableStyle: "table table-striped table-bordered table-hover",
            mode: WebGridPagerModes.All,
            firstText: "Start",
            lastText: "Ends",
            columns: gridinstance.Columns(
               gridinstance.Column(columnName: "AlbumId", header: "ID"),
               gridinstance.Column(columnName: "Title", header: "Album Name"),
               gridinstance.Column(columnName: "ReleaseYear", header: "Date Released", canSort: false),
               gridinstance.Column(columnName: "ReleaseLabel", header: "Label", canSort: false)))
    </div>
</div>
